{
  "manifest_version": 3,"name": "Ciencias - Personalizador Visual",
  "description": "Mejora la experiencia visual del portal de servicios estudiantiles.",
  "version": "1.0.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "-ciencias-personalizador@fciencias..mx",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "16": "icon-16.jpg",
    "32": "icon-32.jpg",
    "48": "icon-48.jpg",
    "128": "icon-128.jpg"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.fciencias.unam.mx/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "FCiencias - Personalizador Visual",
    "default_icon": {
      "16": "icon-16.jpg",
      "32": "icon-32.jpg",
      "48": "icon-48.jpg",
      "128": "icon-128.jpg"
    }
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://web.fciencias.unam.mx/*"
  ],
  "homepage_url": "https://github.com/dvd-22/extension-web-ciencias"
}
